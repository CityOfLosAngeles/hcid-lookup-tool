<div class="navbar-fixed">
    <nav>
        <div class="nav-wrapper">
            <a href=# class="brand-logo center">HCID Lookup Tool</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/upload">Upload</a></li>
            </ul>
        </div>
    </nav>
</div>

<div class="row search-box">
    <form class="col s12" action="/query" method="POST">
        <div class="row">
            <div class="input-field col s3">
                <input id="street_num" type="text" name="street_num">
                <label for="street_num">Street Number</label>
            </div>
            <div class="input-field col s2">
                <input id="street_dir_cd" type="text" name="street_dir_cd">
                <label for="street_dir_cd">Direction</label>
            </div>
            <div class="input-field col s4">
                <input id="street_name" type="text" name="street_name">
                <label for="street_name">Street Name</label>
            </div>
            <div class="input-field col s3">
                <input id="street_type" type="text" name="street_type">
                <label for="street_type">Street Type</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s3">
                <input id="unit_number" type="text" name="unit_number">
                <label for="unit_number">Unit Number</label>
            </div>
            <div class="input-field col s3">
                <input id="city" type="text" name="city">
                <label for="city">City</label>
            </div>
            <div class="input-field col s3">
                <input id="zipcode" type="text" name="zipcode">
                <label for="zipcode">Zipcode</label>
            </div>
            <div class="col s3">
                <input class="btn search-btn" type="submit" value="Search">
            </div>
        </div>
    </form>
</div>
